    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "postcss-sass": "^0.5.0",
    "stylelint": "^15.11.0",
